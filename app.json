{
  "expo": {
    "name": "gotruck-shipper-app",
    "slug": "gotruck-shipper-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-welcome.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/logo-welcome.png",
      "resizeMode": "contain",
      "backgroundColor": "black"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-welcome.png",
        "backgroundColor": "black"
      }
    },
    "web": {
      "favicon": "./assets/images/logo-welcome.png"
    }
  }
}
